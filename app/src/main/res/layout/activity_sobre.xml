<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SobreActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="419dp"
            android:layout_height="75dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" app:title="SIMCAL" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Sobre"
            android:layout_width="128dp"
            android:layout_height="45dp"
            android:id="@+id/sobre_title"
            app:layout_constraintTop_toTopOf="@+id/toolbar2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.141" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.539" android:textSize="36sp"/>
    <TextView
            android:text="Esse Aplicativo foi criado como trabalho para a  matéria de Dispositivos Móveis, na Unitins, ministrada pelo professor Jocivan.  Feito pelos alunos: Emily Piazza lopes Samuel Silva Morais Patrick Aires Nilvan "
            android:layout_width="382dp"
            android:layout_height="479dp"
            android:id="@+id/sobre_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.76"
            android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>