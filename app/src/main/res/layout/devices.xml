<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_button_on" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:background="@drawable/device_item"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_button_off" android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:background="@drawable/device_item"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_device_on" app:layout_constraintStart_toStartOf="@+id/status_button_on"
            android:layout_marginStart="192dp"
            app:layout_constraintBottom_toBottomOf="@+id/status_button_on" android:background="@drawable/on_button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_device_off" app:layout_constraintStart_toStartOf="@+id/status_button_off"
            android:layout_marginStart="192dp"
            app:layout_constraintBottom_toBottomOf="@+id/status_button_off" android:background="@drawable/off_button"/>
</android.support.constraint.ConstraintLayout>